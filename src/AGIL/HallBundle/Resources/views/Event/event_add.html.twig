{% extends "AGILHallBundle::baseHallBundle.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">
                    <span class="panel-title-content">
                        Creation d'un événement
                    </span>
                    </h2>
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                        <div class="form-group">
                            <label for="eventName">Nom de l'événement : </label>
                            {#<input class="form-control" type="text" name="eventName" id="eventName">#}
                            {{ form_row(form.eventTitle) }}
                        </div>
                        <div class="form-group">
                            <label for="eventDesc">Description de l'événement : </label>
                            {#<textarea class="form-control" name="eventDesc" id="eventDesc"></textarea>#}
                            {{ form_row(form.eventText) }}
                        </div>
                        <div class="form-group">
                            <label for="eventDate">Date de début de l'évènement : </label>
                            {#<textarea class="form-control" name="eventDesc" id="eventDesc"></textarea>#}
                            {{ form_row(form.eventDate) }}
                        </div>
                        <div class="form-group">
                            <label for="eventDateEnd">Date de fin de l'évènement : </label>
                            {#<textarea class="form-control" name="eventDesc" id="eventDesc"></textarea>#}
                            {{ form_row(form.eventDateEnd) }}
                        </div>

                        <p>
                            <div class="picture-list" id="addedPicture"></div>
                            <div class="square-add-picture">
                                {{ form_widget(form.photos, {id: '#choosePicture'}) }}
                            </div>
                        </p>
                        <p class="text-center">
                            <input class="btn btn-default" type="reset" value="effacer">
                            {#<input class="btn btn-primary" type="submit" value="valider">#}
                            {{ form_widget(form.Ajouter) }}
                        </p>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

