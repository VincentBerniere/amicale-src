{% extends "AGILHallBundle::baseHallBundle.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">
                    <span class="panel-title-content">
                        Creation d'un événement
                    </span>
                    </h2>
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                        <div class="form-group">
                            <label for="eventName">Nom de l'événement : </label>
                            {{ form_row(form.eventTitle) }}
                        </div>
                        <div class="form-group">
                            <label for="eventDesc">Description de l'événement : </label>
                            {{ form_row(form.eventText) }}
                        </div>

                        <div class="form-group" id="formAddTagsPost">
                            <h5><label class="control-label">Tags</label></h5>
                            <div class="tag_control">
                                <div class="list_item_tag">
                                </div>
                                <input type="text" class="tags_input_visible">
                            </div>
                            {{ form_widget(form.tags, { 'id': 'tags_input' }) }}
                            {{ form_errors(form.tags) }}
                            <div id="tags_container"></div>
                        </div>
                        <div class="form-group">
                            <label for="eventDate">Date de début de l'évènement : </label>
                            <div class="row">
                                <div class="col-lg-1 col-sm-2 col-xs-2 col-md-2">
                                    {{ form_widget(form.eventDate.date.day, {attr : {class: 'form-control'}}) }}
                                </div>
                                <div class="col-lg-2 col-sm-2 col-xs-2 col-md-2">
                                    {{ form_widget(form.eventDate.date.month, {attr : {class: 'form-control'}}) }}
                                </div>
                                <div class="col-lg-2 col-sm-2 col-xs-2 col-md-2">
                                    {{ form_widget(form.eventDate.date.year, {attr : {class: 'form-control'}}) }}
                                </div>
                                <div class="col-lg-2 col-sm-2 col-xs-2 col-md-2">
                                    {{ form_widget(form.eventDate.time.hour, {attr : {class: 'form-control'}}) }}
                                </div>
                                <div class="col-lg-1 col-sm-1 col-xs-1 col-md-1">
                                    heure
                                </div>
                                <div class="col-lg-2 col-sm-2 col-xs-2 col-md-2">
                                    {{ form_widget(form.eventDate.time.minute, {attr : {class: 'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="eventDateEnd">Date de fin de l'évènement : </label>
                            <div class="row">
                                <div class="col-lg-2 col-sm-2 col-xs-2 col-md-2">
                                    {{ form_widget(form.eventDateEnd.date.day, {attr : {class: 'form-control'}}) }}
                                </div>
                                <div class="col-lg-2 col-sm-2 col-xs-2 col-md-2">
                                    {{ form_widget(form.eventDateEnd.date.month, {attr : {class: 'form-control'}}) }}
                                </div>
                                <div class="col-lg-2 col-sm-2 col-xs-2 col-md-2">
                                    {{ form_widget(form.eventDateEnd.date.year, {attr : {class: 'form-control'}}) }}
                                </div>
                                <div class="col-lg-2 col-sm-2 col-xs-2 col-md-2">
                                    {{ form_widget(form.eventDateEnd.time.hour, {attr : {class: 'form-control'}}) }}
                                </div>
                                <div class="col-lg-1 col-sm-1 col-xs-1 col-md-1">
                                    heure
                                </div>
                                <div class="col-lg-2 col-sm-2 col-xs-2 col-md-2">
                                    {{ form_widget(form.eventDateEnd.time.minute, {attr : {class: 'form-control'}}) }}
                                </div>
                            </div>
                        </div>

                        <p>
                            <div class="picture-list" id="addedPicture"></div>
                            <div class="square-add-picture">

                                {{ form_row(form.photos) }}
                                <input type="file" id="choosePicture" name="event_add_form[photos][0][]"
                                class="form-control" multiple="multiple" />
                            </div>
                        </p>

                        <p class="text-center">
                            {{ form_widget(form.Ajouter) }}
                            {{ form_widget(form.Effacer) }}
                            <a class="btn btn-default" href="{{ path('agil_hall_homepage') }}">Annuler</a>
                        </p>
                        {{ tinymce_init() }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

