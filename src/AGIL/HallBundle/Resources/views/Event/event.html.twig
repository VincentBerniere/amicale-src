{% extends "AGILHallBundle::baseHallBundle.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-10"><h5>{{ event.eventTitle }}</h5></div>
                        <div class="col-lg-2"><h5><em class="text-primary-blue">{{ event.getEventPostDate | date('j M Y') }}</em></h5></div>

                    </div>
                </div>
                <div class="panel-body">
                    {{ event.eventText }}
                </div>

                <div class="panel-body">
                    <div class="col-lg-12">
                        <div class="owl-carousel">
                            {% for photo in event.photos %}
                            <div class="item"><img class="img-responsive" src="{{ asset("img/hall/") ~ photo.photoUrl }}"></div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/dQw4w9WgXcQ"
                                    frameborder="0"
                                    allowfullscreen></iframe>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/dQw4w9WgXcQ"
                                    frameborder="0"
                                    allowfullscreen></iframe>
                        </div>

                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function(){
            $(".owl-carousel").owlCarousel({nav:true});
        });
    </script>

{% endblock %}
