{% extends "::base.html.twig" %}

{% block body %}
    <div class="list-group">
        <a href="{{ path("agil_admin_user") }}" class="list-group-item">Liste Utilisateur</a>
    </div>

    <form action="{{ path('agil_admin_user_add') }}" method="post" {{ form_enctype(form) }}>
        {% for flash_message in app.session.flashbag.get('notice') %}
            <div class="flash-notice">
                {{ flash_message }}
            </div>
        {% endfor %}

        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_row(form.email) }}
        </div>

        <div class="form-group">
            {{ form_row(form.firstName) }}
        </div>

        <div class="form-group">
            {{ form_row(form.name) }}
        </div>

        {% if is_granted("ROLE_SUPER_ADMIN") %}
        <div class="form-group">
            {{ form_errors(form.role) }}
            {{ form_widget(form.role) }}
        </div>
        {% endif %}

        <div class="form-group">
            {{ form_row(form.Inviter) }}
        </div>

        {{ form_rest(form) }}

    </form>

    <form action="{{ path('agil_admin_user_add') }}" method="post" {{ form_enctype(form) }}>
        {% for flash_message in app.session.flashbag.get('notice') %}
            <div class="flash-notice">
                {{ flash_message }}
            </div>
        {% endfor %}

        {{ form_errors(formCSV) }}

        <div class="form-group">
            {{ form_row(formCSV.attachment) }}
        </div>

        <div class="form-group">
            {{ form_row(formCSV.Inviter) }}
        </div>

        {{ form_rest(formCSV) }}

    </form>

{% endblock %}