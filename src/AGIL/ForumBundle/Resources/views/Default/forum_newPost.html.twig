{% extends "::base.html.twig" %}

{% block body %}
    <!-- Ajout d'un nouveau post -->
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">
                            <span class="panel-title-content">
                              Nouveau post
                            </span>
                </h2>
            </div>
            <div class="panel-body">

                <!-- Formulaire d'ajout d'un nouveau post pour le forum -->

                <form class="form-horizontal newPost">

                    <div class="form-group" id="formAddNamePost">
                        <label for="inputNamePost" class="col-xs-2 col-sm-2 col-md-2 col-lg-2 control-label">Nom du sujet</label>
                        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                            <input type="text" class="form-control" id="inputNamePost" placeholder="Nom du sujet">
                        </div>
                    </div>
                    <div class="form-group" id="formAddDescPost">
                        <label for="inputDescPost" class="col-xs-2 col-sm-2 col-md-2 col-lg-2 control-label">Description</label>
                        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                            <input type="text" class="form-control" id="inputDescPost"
                                   placeholder="Description">
                        </div>
                    </div>


                    <div class="form-group" id="formAddTagsPost">
                        <label for="inputTagsPost" class="col-xs-2 col-sm-2 col-md-2 col-lg-2 control-label">Tags</label>
                        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                            <input type="text" class="form-control" id="inputTagsPost">
                        </div>
                    </div>

                    <div class="form-group" id="formAddContentPost">
                        <label for="inputContentPost" class="col-sm-2 control-label">  </label>
                        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                            <textarea id="inputContentPost" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">  </label>
                        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                            <pre class="preview"> <em><h4>PREVIEW ZONE</h4></em></pre>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Preview</button>
                            <button type="submit" id="btn-add-post" class="btn btn-default disabled">Enregistrer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}