{% extends 'AGILForumBundle::baseForumBundle.html.twig' %}

{% block body %}
    <!-- Suppression du sujet -->
    <div class="row">
        <div class="col-xs-12 col-lg-offset-3 col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">
                    <span class="panel-title-content">
                        Suppression du sujet
                    </span>
                    </h2>
                </div>
                <div class="panel-body">
                    <!-- Formulaire de suppression du post pour le forum -->
                    {{ form_start(form) }}
                        <p class="control-label">Sujet : <strong>{{ subject.forumSubjectTitle }}</strong></p>
                        <p class="text-primary-blue">Voulez-vous vraiment supprimer ce sujet?</p>
                        {% if isAdmin == true %}
                            <div class="form-group">
                                {{ form_errors(form.choiceReason) }}
                                {{ form_label(form.choiceReason) }}
                                {{ form_widget(form.choiceReason) }}
                            </div>

                            <div class="form-group">
                                <p>Message additionnel :</p>
                                {{ form_row(form.reasonOption) }}
                            </div>
                        {% endif %}
                        <div class="text-center">
                            {{ form_widget(form.Supprimer) }}
                            <a class="btn btn-default" href="{{ path('agil_forum_subject_answers', {'idCategory': idCategory, 'idSubject': idSubject}) }}">
                                Annuler
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}