{% extends "AGILUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {# Error login form #}
    {% if error %}
        <div class="alert alert-danger">
            <strong>{% trans %}Erreur de connexion {% endtrans %}!</strong> Mauvaise combinaison d'email/mot de passe
        </div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <label for="email">Email</label>
        <input type="email" id="username" name="_username" />

        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="_password" />

        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">Garder ma session active</label>

        <input type="submit" id="_submit" name="_submit" value="Connexion" />
    </form>

    <a href="{{ path('fos_user_resetting_request') }}">Mot de passe perdu ?</a>

{% endblock %}