{% extends "AGILProfileBundle::baseProfileBundle.html.twig" %}
{% block body %}
    <div class="row">
        <div class="col-sm-12 col-xs-12 col-md-4 col-lg-4">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <img class="img-responsive" src="{{ asset("img/profile/") ~ user.userProfilePictureUrl }}" >
                </div>
            </div>
        </div>
        {% if user.userFirstName is not null or user.userLastName is not null %}
            <div class="col-sm-12 col-xs-12 col-md-8 col-lg-8">
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <h3>{{ user.userFirstName }} {{ user.userLastName }}</h3>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">
                        <span class="panel-title-content">
                            Informations générales
                        </span>
                    </h2>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12 col-xs-12 col-md-12 col-lg-offset-2 col-lg-8">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <form action="{{ path('agil_profile_edit') }}" method="post" {{ form_enctype(form) }}>

                                        {# email field #}
                                        <div class="form-group">
                                            <label for="email">Modifier l'adresse email :</label>
                                            <div class="input-group">
                                                <div class="input-group-addon"><span class="material-icons">email</span></div>
                                                {{ form_row(form.email) }}
                                            </div>
                                        </div>

                                        {# username field #}
                                        <div class="form-group">
                                            <label for="pseudo">Modifier le pseudo :</label>
                                            <div class="input-group">
                                                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                                {{ form_row(form.username) }}
                                            </div>
                                        </div>

                                        {# cv field #}
                                        {#<div class="form-group">#}
                                            {#<label for="cv">Modifier le cv :</label>#}
                                            {#<div class="input-group">#}
                                                {#<div class="input-group-addon"><span class="glyphicon glyphicon-file"></span></div>#}
                                                {#<input class="form-control" type="text" name="cv" id="cv" placeholder="lien vers cv">#}
                                            {#</div>#}
                                        {#</div>#}
                                        <div class="form-group">
                                            <label for="pseudo">Modifier le CV :</label>
                                            <div class="input-group">
                                                {{ form_row(form.CV) }}
                                            </div>
                                        </div>

                                        {# profile picture #}
                                        <div class="form-group">
                                            <label for="pseudo">Modifier la photo de profil :</label>
                                            <div class="input-group">
                                                {{ form_row(form.userProfilePictureUrl) }}
                                            </div>
                                        </div>

                                        {#CV field#}
                                        {#<div class="form-group">#}
                                            {#<label for="cv">Modifier le CV :</label>#}
                                            {#<div class="input-group">#}
                                                {#<div class="input-group-addon"><span class="glyphicon glyphicon-file"></span></div>#}
                                                {#{{ form_row(form.CV) }}#}
                                            {#</div>#}
                                        {#</div>#}

                                        {# PW + PW confirmation field #}
                                            <div class="form-group">
                                                <label for="password">Modifier le mot de passe :</label>
                                                <div class="input-group">
                                                    <label for="password" class="input-group-addon">
                                                        <i class="material-icons">vpn_key</i>
                                                    </label>
                                                    {{ form_row(form.password) }}
                                                </div>
                                                <div class="input-group">
                                                    <label for="password_verification" class="input-group-addon">
                                                        <i class="material-icons">vpn_key</i>
                                                    </label>
                                                    {{ form_row(form.passwordConfirm) }}
                                                </div>
                                            </div>

                                        {# update button #}
                                        {{ form_widget(form.Modifier, {'attr' : {'class' : 'btn btn-primary'}}) }}

                                        {{ form_rest(form) }}
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">
                        <span class="panel-title-content">
                            Compétences
                        </span>
                    </h2>
                </div>
                <div class="panel-body">
                    <span class="label label-primary">PHP</span>
                    <span class="label label-warning">JAVA</span>
                    <span class="label label-danger">SYMFONY</span>
                    <span class="label label-info">PHPSTORM</span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

